<UserControl x:Class="Bau.Controls.CodeEditor.ctlEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
   <Grid>
		<avalonEdit:TextEditor x:Name="txtEditor" FontFamily="Consolas" SyntaxHighlighting="C#" 
													 FontSize="10pt" ShowLineNumbers="True" 
													 TextChanged="txtEditor_TextChanged" DragEnter="txtEditor_DragEnter"
													 Drop="txtEditor_Drop" />
	</Grid>
</UserControl>
